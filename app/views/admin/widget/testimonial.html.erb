
<div class="data-description">
  This is the Testimonial HTML used to style each testimonial. View your HTML changes in the <b>Staged View Tab</b>.
</div>  

<%= form_tag('/admin/theme/testimonial-html', :method => :post, :id => 'code-editor-form', :class => "editor-form" ) do %>
  <div class="btn-toolbar">
    <div class="btn-group">
      <a href="/admin/theme/testimonial-html" class="refresh btn">Refresh Staged HTML</a>
      <a href="/admin/theme/testimonial-html/original" class="load-stock btn">Load Original HTML</a>
    </div> 

    <div class="btn-group" style="float:right">
      <button type="submit" class="btn btn-success positive">Save</button>
    </div>
  </div>
  <textarea id="code-editor" name="data" style="width:95%; height:600px"><%= @theme.get_attribute("testimonial.html").staged %></textarea>
<% end %>

<ul class="tokens" style="display:none">
  <li><b>Testimonial Tokens</b></li>
  <% Testimonial.api_attributes.each do |a| %>
    <li><input type="text" value="{{<%= a %>}}" /></li>
  <% end%>
</ul>
