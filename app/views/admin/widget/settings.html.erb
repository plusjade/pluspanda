<div class="data-description">
  Edit basic widget settings here. View your changes in the <b>Staged View Tab</b>.
</div>

<%= form_for @user.tconfig, :url => '/admin/settings', :html => { :id => nil, :rel => "form.settings" } do |f| %>  
  <div class="btn-toolbar">
    <div class="btn-group" style="float:right">
      <button type="submit" class="btn btn-success positive">Save</button>
    </div>
  </div>

  <fieldset>
    <label>Testimonials per page:</label>
    #<%= f.text_field(:per_page, :id => nil, :class => "tconfig_per_page", :maxlength => 3, :style => "width:30px" ) %>
  </fieldset>

  <fieldset>
    <label>Order Testimonials by:</label>  
     <%= f.select(:sort, Tconfig.sorters, {}, :id => nil, :class => "tconfig_sort" ) %>
    <p>(you can order testimonials in the <b>Manage Testimonials</b> section)</p>
  </fieldset>
<% end %>

<strong>Installed themes</strong>
<ul id="installed-themes">
<% @user.standard_themes.each do |theme| %>
  <% if theme.staged == true %>
    <li class="theme"><%= link_to StandardTheme.names[theme.name], "/admin/theme/#{theme.id}/stage", :class => "active", :title => "Click to stage this theme for editing." %></li>
  <% else %>
    <li class="theme"><%= link_to StandardTheme.names[theme.name], "/admin/theme/#{theme.id}/stage", :title => "Click to stage this theme for editing." %></li>
  <% end %>
<% end %>
</ul>
<p style="line-height:1.5em;">
  The highlighted theme is the currently staged theme. Stage a new theme by clicking the theme name.
  <br/>You can also install more themes in the <a href="#/theme">Theme Gallery</a>
</p>
