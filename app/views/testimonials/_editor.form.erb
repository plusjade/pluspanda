
<%
rand   = 'random'
image = ''
#image  = (empty($testimonial->image))
#  ? ''
#  : "<img src=\"$image_url/$testimonial->image?r=rand\"/>";
%>

<% if !current_user && @testimonial.lock %>
  <div class="notice"><h1>This Testimonial is locked!</h1></div>
<% end %>

<% if flash[:notice] %>
  <div class="notice"><h1><%= flash[:notice] %></h1></div>
<% end %>
    
<div id="editor-wrapper">

<% form_for @testimonial do |f| %>
  <%= hidden_field_tag(:apikey, params[:apikey]) if params['apikey'] %>
  
<% if !current_user %>
  <div class="panda-image">
    Testimonial
  </div>
<% end %>   
  <div class="t-view">
    <div id="t-view-inner">
      
      <div class="t-content">
        <!--
        <span style="display:none">
           <?php echo common_build::rating_select_nice($testimonial->rating)?>
        </span>
        -->        
        <div class="rating-fallback">
          Select a rating  <%= f.select(:rating, [['5 stars',5],['4 stars',4],['3 stars',3],['2 stars',2],['1 star',1]])%>
        </div>

        <div class="t-body">
          <%= f.text_area :body %>
        </div>
         
        <fieldset>
          <label>Full Name</label>
          <%= f.text_field :name %>
        </fieldset>
        
        <fieldset>
          <label>Company</label>
          <%= f.text_field :company %>
         </fieldset>

        <fieldset>
          <label>Role at Company</label>
          <%= f.text_field :c_position %>
        </fieldset>
                
        <fieldset>       
          <label>Location</label>
          <%= f.text_field :location %>
        </fieldset>
        
        <fieldset>        
          <label>Website</label>
          <%= f.text_field :url %>
        </fieldset> 
               
      </div>

      <div class="t-details">
        Upload new headshot or logo
        <input type="file" name="image" style="width:180px !important"/>
        <div class="image" rel="<?php echo $image_url?>">
          <?php echo $image?>
        </div>
        <a href="/admin/testimonials/manage/crop?image=<?php echo $testimonial->image?>" rel="facebox">Edit Image</a>
        
        <fieldset>
          <label>Select Category</label>
          (tag list)
        </fieldset>

        <fieldset>
          <%= @testimonial.created_at %>
        </fieldset>
                
        <% if current_user %>
          <div id="admin-extra">
            Lock Testimonial? 
            <%= f.check_box :lock %>
            <%= f.label(:lock, "(yes)", :style => "display:inline;") %>          
            <div class="t-publish">
              Publish? 
              <%= f.check_box :publish %>
              <%= f.label(:publish, "(yes)", :style => "display:inline;") %>              
            </div>
          </div>
        <% end %>
        
        <div class="round-box-tabs buttons">
          <button class="submit-button positive" type="submit">Save Changes</button>
        </div>
      </div>
            
    </div>
  </div>

<% end %>
</div>



