(function() {
    window.pandaSettings = <%= MultiJson.encode(pandaSettings).html_safe %>;
    window.pandaThemeConfig = {
        cssUrl : '<%= stylesheet %>',
        wrapperHTML : '<%= raw wrapper_html %>',
        testimonialHTML : function(item) {
            return '<%= raw testimonial_html %>';
        }
    }

    var s = document.createElement("script"); s.type = "text/javascript"; s.async = true;
    s.src = '<%= widget_url %>';
    document.body.appendChild(s);
})();
