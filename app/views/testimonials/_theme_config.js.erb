(function() {
    // <%= Time.new %>
    window.pandaSettings = {
        apiUrl : '<%= root_url %>',
        apiVrsn : '<%= api_version_number %>',
        apikey : '<%= apikey %>',
    }
    pandaSettings.formEndpoint = pandaSettings.apiUrl + '/' + pandaSettings.apiVrsn + '/testimonials/new.iframe?apikey=' + pandaSettings.apikey;
    pandaSettings.testimonialsEndpoint = pandaSettings.apiUrl + '/' + pandaSettings.apiVrsn + '/testimonials.js';

    window.pandaThemeConfig = {
        cssUrl : '<%= stylesheet %>',
        wrapperHTML : '<%= raw wrapper_html %>',
        testimonialHTML : function(item) {
            return '<%= raw testimonial_html %>';
        }
    }

    var script = document.createElement("script");
    script.type = "text/javascript";
    script.src = '<%= widget_url %>';
    document.body.appendChild(script);
})();
