
<div id="editor-wrapper">

  <%= form_for @testimonial, :html => { :multipart => true, :class => "js-multipart-form" } do |f| %>
    <%= hidden_field_tag(:apikey, params[:apikey]) if params['apikey'] %>
    <div class="t-view">
      <div id="t-view-inner" style="overflow:hidden; margin-bottom:10px">

        <div class="t-content">    

          <div class="t-body">
            <%= f.text_area :body, :style => "height:180px;" %>
          </div>
        </div>

        <div class="t-details">
          <div class="rating-fallback">
            Select a rating  <%= f.select(:rating, [['5 stars',5],['4 stars',4],['3 stars',3],['2 stars',2],['1 star',1]])%>
          </div>
          <br/>        
          Upload new headshot or logo
          <%= f.file_field :avatar, :style => "width:180px" %>
          <div id="testimonial-image-wrapper" class="image" rel="<%= @testimonial.avatar.url(:sm) %>">
             <%= image_tag @testimonial.image_source %>
          </div>
        </div>
      </div>

      <table id="data">
        <tr>
          <td>
            <%= f.text_field :name %> <label>Full Name</label>
          </td>
          <td>
            <%= f.text_field :company %> <label>Company</label>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.text_field :location %> <label>Location</label>
          </td>
          <td>   
            <%= f.text_field :c_position %> <label>Role at Company</label>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.text_field :url %> <label>Website</label>
          </td>
          <td>
            <input type="text" size="30" value="<%= @testimonial.created_at.strftime("%c") %>" DISABLED />
             <label>Date Created</label>
          </td>
        </tr>
      </table>
      <div class="buttons">
        <table id="admin-table">
          <tr>
            <td>
              <button class="submit-button positive" type="submit" style="width:200px;margin:auto">Save Changes</button>
            </td>
            <td class="t-publish">
              Publish? 
              <%= f.check_box :publish %>
              <%= f.label(:publish, "(yes)", :style => "display:inline;") %>              
            </td>
            <td>
              Lock Testimonial? 
              <%= f.check_box :lock %>
              <%= f.label(:lock, "(yes)", :style => "display:inline;") %>             
            </td>
          </tr>
        </table>
        
      </div>
    </div>
  <% end %>
</div>

